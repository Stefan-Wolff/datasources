PREFIX scires:   <http://vivoweb.org/ontology/scientific-research#>
PREFIX rcuk:     <http://gtr.rcuk.ac.uk/gtr/api/>
PREFIX rcukp:    <http://gtr.rcuk.ac.uk/gtr/api/person/>
PREFIX rcuko:    <http://gtr.rcuk.ac.uk/gtr/api/organisation/>
PREFIX rcukpj:   <http://gtr.rcuk.ac.uk/gtr/api/project/>

CONSTRUCT {
    ?grant vivo:relates ?org .
    ?grant vivo:relates _:role .
    # no appropriate sublcass for now. Using InvestigatorRole
    # so will appear in interface
    _:role a vivo:InvestigatorRole . 
    _:role obo:RO_0000052 ?org .
    _:role obo:BFO_0000054 ?project .
} WHERE {
    { ?link rcuk:rel "PARTICIPANT_ORG" } UNION { ?link rcuk:rel "PP_ORG" } UNION { ?link rcuk:rel "COLLAB_ORG" }
    ?links rcuk:link ?link .
    ?project rcuk:links ?links .
    ?project a vivo:Project .
    ?grant vivo:fundingVehicleFor ?project .
    ?link vivo:relates ?org .
    FILTER NOT EXISTS { ?org a vivo:Project }
    BIND(IRI(CONCAT(STR(?project), "-leadOrg-", STRAFTER(STR(?person), "/api/"))) AS ?role)
}
